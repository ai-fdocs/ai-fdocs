{
    "name": "ai-fdocs",
    "displayName": "AI Fresh Docs",
    "description": "Manage documentation for AI coding assistants directly in VS Code",
    "version": "0.1.0",
    "publisher": "ai-fdocs",
    "license": "MIT",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "ai",
        "documentation",
        "cursor",
        "copilot",
        "windsurf",
        "docs",
        "rust",
        "nodejs"
    ],
    "activationEvents": [
        "workspaceContains:Cargo.toml",
        "workspaceContains:package.json",
        "workspaceContains:ai-fdocs.toml"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "ai-fdocs.openDocs",
                "title": "AI-Docs: Open Documentation"
            },
            {
                "command": "ai-fdocs.refresh",
                "title": "AI-Docs: Refresh",
                "icon": "$(refresh)"
            },
            {
                "command": "ai-fdocs.sync",
                "title": "AI-Docs: Sync",
                "icon": "$(sync)"
            },
            {
                "command": "ai-fdocs.syncForce",
                "title": "AI-Docs: Force Sync",
                "icon": "$(sync-ignored)"
            },
            {
                "command": "ai-fdocs.status",
                "title": "AI-Docs: Status",
                "icon": "$(pulse)"
            },
            {
                "command": "ai-fdocs.check",
                "title": "AI-Docs: Check",
                "icon": "$(check)"
            },
            {
                "command": "ai-fdocs.prune",
                "title": "AI-Docs: Prune",
                "icon": "$(trash)"
            },
            {
                "command": "ai-fdocs.init",
                "title": "AI-Docs: Init",
                "icon": "$(file-add)"
            },
            {
                "command": "ai-fdocs.forceRefreshPackage",
                "title": "AI-Docs: Force Refresh Package",
                "icon": "$(sync-ignored)"
            },
            {
                "command": "ai-fdocs.openSummary",
                "title": "AI-Docs: Open _SUMMARY.md",
                "icon": "$(book)"
            },
            {
                "command": "ai-fdocs.openProvenanceUrl",
                "title": "AI-Docs: Open Source Provenance URL",
                "icon": "$(link-external)"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "ai-fdocs",
                    "title": "AI Docs",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "ai-fdocs": [
                {
                    "id": "ai-fdocs-dependencies",
                    "name": "Dependencies"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "ai-fdocs.sync",
                    "when": "view == ai-fdocs-dependencies",
                    "group": "navigation@1"
                },
                {
                    "command": "ai-fdocs.syncForce",
                    "when": "view == ai-fdocs-dependencies",
                    "group": "navigation@2"
                },
                {
                    "command": "ai-fdocs.status",
                    "when": "view == ai-fdocs-dependencies",
                    "group": "navigation@3"
                },
                {
                    "command": "ai-fdocs.check",
                    "when": "view == ai-fdocs-dependencies",
                    "group": "navigation@4"
                },
                {
                    "command": "ai-fdocs.prune",
                    "when": "view == ai-fdocs-dependencies",
                    "group": "navigation@5"
                },
                {
                    "command": "ai-fdocs.init",
                    "when": "view == ai-fdocs-dependencies",
                    "group": "navigation@6"
                },
                {
                    "command": "ai-fdocs.refresh",
                    "when": "view == ai-fdocs-dependencies",
                    "group": "navigation@7"
                }
            ],
            "view/item/context": [
                {
                    "command": "ai-fdocs.forceRefreshPackage",
                    "when": "view == ai-fdocs-dependencies && viewItem == package",
                    "group": "inline@1"
                },
                {
                    "command": "ai-fdocs.openSummary",
                    "when": "view == ai-fdocs-dependencies && viewItem == package",
                    "group": "navigation@1"
                },
                {
                    "command": "ai-fdocs.openProvenanceUrl",
                    "when": "view == ai-fdocs-dependencies && viewItem == package",
                    "group": "navigation@2"
                }
            ]
        },
        "configuration": {
            "title": "AI Fresh Docs",
            "properties": {
                "ai-fdocs.binaryPath": {
                    "type": "string",
                    "default": "",
                    "description": "Custom path to ai-fdocs binary. Leave empty to auto-detect."
                },
                "ai-fdocs.autoSync": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically sync when lockfile changes are detected."
                },
                "ai-fdocs.syncOnSave": {
                    "type": "boolean",
                    "default": false,
                    "description": "Automatically sync when ai-fdocs.toml is saved."
                },
                "ai-fdocs.outputDir": {
                    "type": "string",
                    "default": "fdocs",
                    "description": "Output directory for documentation files."
                },
                "ai-fdocs.maxFileSizeKb": {
                    "type": "number",
                    "default": 512,
                    "minimum": 1,
                    "description": "Maximum size (KB) for fetched documentation files."
                },
                "ai-fdocs.syncConcurrency": {
                    "type": "number",
                    "default": 8,
                    "minimum": 1,
                    "description": "Maximum number of concurrent sync operations."
                },
                "ai-fdocs.prune": {
                    "type": "boolean",
                    "default": true,
                    "description": "Remove stale documentation entries during sync/prune flows."
                },
                "ai-fdocs.docsSource": {
                    "type": "string",
                    "default": "npm_tarball",
                    "enum": [
                        "github",
                        "npm_tarball"
                    ],
                    "description": "Primary docs source for dependency sync."
                },
                "ai-fdocs.syncMode": {
                    "type": "string",
                    "default": "lockfile",
                    "enum": [
                        "lockfile",
                        "latest-docs",
                        "hybrid"
                    ],
                    "description": "Sync strategy to use for resolving documentation versions."
                },
                "ai-fdocs.engine": {
                    "type": "string",
                    "default": "external-cli",
                    "enum": [
                        "internal",
                        "external-cli"
                    ],
                    "description": "Execution engine for sync/check flows. In dev/canary builds the runtime default is internal; stable defaults to external-cli unless overridden."
                },
                "ai-fdocs.latestTtlHours": {
                    "type": "number",
                    "default": 24,
                    "minimum": 1,
                    "description": "TTL in hours for latest-docs mode cache."
                },
                "ai-fdocs.reportFormat": {
                    "type": "string",
                    "default": "text",
                    "enum": [
                        "text",
                        "json"
                    ],
                    "description": "Report format for command output."
                },
                "ai-fdocs.format": {
                    "type": "string",
                    "default": "table",
                    "enum": [
                        "table",
                        "json"
                    ],
                    "description": "Structured output format for commands that support --format."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "test": "node ./dist/test/runTest.js",
        "lint": "eslint src --ext ts",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^20.12.0",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "@vscode/test-electron": "^2.3.9",
        "eslint": "^8.57.0",
        "typescript": "^5.4.0",
        "@vscode/vsce": "^2.24.0"
    }
}
